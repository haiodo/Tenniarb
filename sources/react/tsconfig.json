{
    "compilerOptions": {
        "outDir": "./out",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "stripInternal": true,
        "declaration": false,
        "noEmit": true,
        "noUnusedLocals": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out"
    ]
}